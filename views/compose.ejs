<%- include('partials/header') %>

<h1>Compose</h1>
<div>
  <form action="/compose" method="post" onsubmit="clearFormFields()">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" name="postTitle" ></input>
      <label>Post</label>
      <textarea class="form-control" rows="5" name="postBody" ></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
  </form>
</div>

<script>
  function clearFormFields() {
    document.getElementById("postTitle").value = "";
    document.getElementById("postBody").value = "";
  }
</script>
<%- include('partials/footer') %>
